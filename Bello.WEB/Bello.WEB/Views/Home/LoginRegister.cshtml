@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section Styles{
    <link href="~/css/logincss.css" rel="stylesheet" />
    <link href="~/css/homeindex.css" rel="stylesheet" />
}
<div style="width: 100%; background: linear-gradient(135deg, #0079bf, #5067c5); height: calc(100vh - 60px);">
    <div class="container form-login">
        <div class="forms-container">
            <div class="signin-signup">
                <form id="loginform" class="sign-in-form">
                    <h2 class="title">Đăng nhập</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input id="email" type="text" placeholder="Email"
                               name="email" value="longconuong@gmail.com"
                               data-rule-required="true"
                               data-msg-required="Vui lòng nhập một địa chỉ email"
                               data-rule-email="true" data-msg-email="Vui lòng nhập một địa chỉ email hợp lệ" />

                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input id="password" name="password" type="password"
                               placeholder="Mật khẩu" value="Zxcv!234"
                               data-rule-required="true"
                               data-msg-required="Vui lòng nhập mật khẩu"
                               data-rule-minlength="8" data-msg-minlength="Vui lòng nhập mật khẩu ít nhất 8 kí tự" />
                    </div>
                    <a onclick="login.login()" class="btn solid">Đăng nhập</a>
                </form>
                <form id="signupform" action="#" class="sign-up-form">
                    <h2 class="title">Đăng ký</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input id="fullname" name="fullname" type="text" placeholder="Tên người dùng" data-rule-required="true"
                               data-msg-required="Vui lòng tên người dùng"/>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" id="emailsignup" name="emailsignup"
                               data-rule-required="true"
                               data-msg-required="Vui lòng nhập một địa chỉ email"
                               data-rule-email="true"
                               data-msg-email="Vui lòng nhập địa chỉ email hợp lệ" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Mật khẩu" id="passwordsignup" name="passwordsignup"
                               data-rule-required="true"
                               data-msg-required="Vui lòng nhập mật khẩu"
                               data-rule-minlength="8"
                               data-msg-minlength="Vui lòng nhập mật khẩu ít nhất 8 kí tự, trong đó có ít nhất 1 kí tự hoa, 1 sô, 1 kí tự đặc biệt" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Xác nhận mật khẩu" data-rule-required="true"
                               data-msg-required="Vui lòng nhập mật khẩu"
                               data-rule-equalto="#passwordsignup"
                               data-msg-equalto="Vui lòng nhập đúng mật khẩu ở trên" />
                    </div>
                    <a onclick="login.signup()" class="btn solid">Đăng ký</a>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                        ex ratione. Aliquid!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Đăng ký
                    </button>
                </div>
                <img src="img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                        laboriosam ad deleniti.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Đăng nhập
                    </button>
                </div>
                <img src="img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script src="~/js/login.js" asp-append-version="true"></script>
    <link href="~/css/homeindex.css" rel="stylesheet" />
}



